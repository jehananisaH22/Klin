<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- Search and Weather Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFF"
        android:layout_marginTop="25dp">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_menu"
            android:scaleType="centerInside" />




        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search"
            android:textColorHint="#FFFF"
            android:padding="10dp"
            android:minHeight="48dp"
            android:backgroundTint="#1E7622"
            android:background="@drawable/search_background" />


        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_notifications"
            android:scaleType="centerInside" />


        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_profile"
            android:scaleType="centerInside" />
    </LinearLayout>




    <!-- Greeting and Weather Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/background_greeting">


        <!-- Greeting Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Pagi"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>


            <!-- Garis -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>


            <!-- Username Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arifi"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29 C\nRumbai\nCerah Berawan"
            android:textSize="16sp"
            android:background="@drawable/background_cuaca"
            android:textColor="@android:color/white"
            android:gravity="end|center"/>
    </LinearLayout>


    <!-- Available Services -->
    <TextView
        android:id="@+id/serviceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Layanan Tersedia"
        android:textSize="17dp"
        android:textStyle="bold"
        android:padding="16dp"/>


    <!-- Scrollable Services -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Include Service Items -->
            <include layout="@layout/service_item" />
            <include layout="@layout/service_item" />
            <include layout="@layout/service_item" />
            <include layout="@layout/service_item" />


        </LinearLayout>
    </ScrollView>


    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#1E7622"
        android:gravity="center">


        <!-- Home Button -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"
            android:scaleType="fitStart"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"/>


        <!-- Services Button -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/services"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:contentDescription="@string/description_services" />


        <!-- Notifications Button -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/commercialnotif"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:contentDescription="@string/description_services" />
    </LinearLayout>


</LinearLayout>
