<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <!-- Service Item 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_selokan" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">


            <TextView
                android:id="@+id/serviceTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membersihkan rumah/Tempat Tinggal"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/servicePeople1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Orang"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/serviceSchedule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Jadwal"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>


    <!-- Service Item 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">


        <ImageView
            android:id="@+id/serviceIcon2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_selokan" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">


            <TextView
                android:id="@+id/serviceTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membersihkan Lapangan"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/servicePeople2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 Orang"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/serviceSchedule2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Jadwal"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>


    <!-- Service Item 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">


        <ImageView
            android:id="@+id/serviceIcon3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_selokan" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">


            <TextView
                android:id="@+id/serviceTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membersihkan Selokan"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/servicePeople3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Orang"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/serviceSchedule3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Jadwal"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>


    <!-- Service Item 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">


        <ImageView
            android:id="@+id/serviceIcon4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_selokan" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">


            <TextView
                android:id="@+id/serviceTitle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membersihkan Sungai"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/servicePeople4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 Orang"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/serviceSchedule4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Jadwal"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
